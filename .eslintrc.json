{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended",
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "2022",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "rules": {
            "import/extensions": [
              "error",
              "ignorePackages",
              {
                "js": "never",
                "jsx": "never",
                "ts": "never",
                "tsx": "never"
              }
        ]
    },
    "ignorePatterns": [
        "./*.(js|ts)",
        "./*.config.ts",
        "./tsconfig.json"
    ],
    "settings": {
        "import/resolver": {
            "node": {
                "paths": ["src"],
                "extensions": [".js", ".jsx", ".ts", ".tsx"]
            }
        }
    }
}
